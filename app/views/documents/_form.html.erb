<%= form_for [current_user, @document] do |f| %>
  <% if @document.errors.any? %>
    <%= render 'shared/errors', obj: @document %>  
  <% end %>
  
  <div class="form-group">
    <%= f.label :name, class: "control-label" %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :resume, class: "control-label" %><br>
    <%= f.file_field :resume, class: "form-control" %>
  </div>

  <%= f.button :submit, class: "btn btn-primary pull-left" %>

<% end %>
