<%= form_for [current_user, @position] do |f| %>
  <% if @position.errors.any? %>
    <%= render 'shared/errors', obj: @position %>  
  <% end %>

   <div class="form-group">
    <%= f.label :employer, class: "control-label" %><br>
    <%= f.text_field :employer, class: "form-control" %>
  </div>


   <div class="form-group">
    <%= f.label :Register_id, class: "control-label" %><br>
    <%= f.number_field :reg_id, class: "form-control" %>
  </div>


   <div class="form-group">
    <%= f.label :Open_date, class: "control-label"%><br>
    <%= f.date_field :open_date, class: "form-control" %>
  </div>

   <div class="form-group">
    <%= f.label :Close_date, class: "control-label" %><br>
    <%= f.date_field :close_date, class: "form-control" %>
  </div>

   <div class="form-group">
    <%= f.label :Applied_date, class: "control-label" %><br>
    <%= f.date_field :applied_date, class: "form-control" %>
  </div>

   <div class="form-group">
    <%= f.label :Interview_date, class: "control-label" %><br>
    <%= f.date_field :interview_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :Notes, class: "control-label" %><br>
    <%= f.text_area :notes, class: "form-control" %>
  </div>

  <%= fields_for(@position.applieds.build) do |ds| %>
    <%= ds.label "All files" %><br>
    <%= collection_select(:document, :id, current_user.documents, :id, :resume_identifier, {}, {:multiple => true }) %>

  <% end %>
  <br>
  <br>
    <%= f.button :submit, class: "btn btn-primary pull-left" %>
  
<% end %>
 