<% if current_user %>
  <div class="center">
    <h3>Hi! <%= truncate(current_user.first_name + " " + current_user.last_name, length: 25).html_safe %></h3>
    <p> Welcome to Job Application Tracker App and we are sure you love managing your job applications.</p>
    <%= link_to "Explore Inside", current_user, class: "btn btn-info" %>
  </div>
<% else %>
  <div class="jumbotron">
    <h2>Welcome to the Job Application Tracker App!</h2>
    <p class="lead">You'll love managing your job applications. Sign up!</p>
  </div>

  <div class="row">
    <div class="plans clearfix">
      <div class="col-lg-3 col-lg-offset-3 plan">
        <h2>Premium Plan</h2>
        <div class="price pull-right">Price: $10</div>
        <div class="features">
          <ul>
            <li>Unlimited File Uploads</li>
            <li>Responsive design</li>
            <li>Access anywhere</li>
            <li>15 Job Applications </li>
          </ul>
        </div>
        <p> <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary sign-up' %></p>
      </div>

      <div class="col-lg-3 plan">
        <h2>Amaze Plan</h2>
        <div class="price pull-right">Price: $20</div>
        <div class="features">
          <ul>
            <li>Unlimited File Uploads</li>
            <li>Responsive design</li>
            <li>Access anywhere</li>
            <li class='extra'>Unlimited Job Applications</li>
          </ul>
        </div>
        <p><%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary sign-up' %></p>
      </div>
    </div>
  </div>
<% end %>